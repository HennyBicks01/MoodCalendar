<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoodCalendarTracker.Views.ItemsPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">

        <Label Text="Past Month:" FontSize="Medium" />
        <Label Text="{Binding GoodCountMonth}" FontAttributes="Bold" TextColor="Green" />
        <Label Text="{Binding NeutralCountMonth}" FontAttributes="Bold" TextColor="Orange" />
        <Label Text="{Binding BadCountMonth}" FontAttributes="Bold" TextColor="Red" />

        <Slider x:Name="AverageMoodSlider"
                Maximum="1"
                Minimum="-1"
                Value="{Binding AverageMoodMonth}"
                IsEnabled="false"/>

        <Label Text="Past Year:" FontSize="Medium" />
        <Label Text="{Binding GoodCountYear}" FontAttributes="Bold" TextColor="Green" />
        <Label Text="{Binding NeutralCountYear}" FontAttributes="Bold" TextColor="Orange" />
        <Label Text="{Binding BadCountYear}" FontAttributes="Bold" TextColor="Red" />

        <Slider x:Name="AverageMoodYearSlider"
                Maximum="1"
                Minimum="-1"
                Value="{Binding AverageMoodYear}"
                IsEnabled="false"/>

        <Label Text="All Time:" FontSize="Medium" />
        <Label Text="{Binding GoodCountAll}" FontAttributes="Bold" TextColor="Green" />
        <Label Text="{Binding NeutralCountAll}" FontAttributes="Bold" TextColor="Orange" />
        <Label Text="{Binding BadCountAll}" FontAttributes="Bold" TextColor="Red" />

        <Slider x:Name="AverageMoodAllSlider"
                Maximum="1"
                Minimum="-1"
                Value="{Binding AverageMoodAll}"
                IsEnabled="false"/>

    </StackLayout>

</ContentPage>
